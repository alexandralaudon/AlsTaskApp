!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= "gCamp"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-fixed-top.navbar-inverse
      .container
        .navbar-header
          = link_to "gCamp", root_path, class:"navbar-brand"
        %ul.nav.navbar-nav.navbar-right
          - if current_user
            %li= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user.id)
            %li= link_to 'Sign Out', sign_out_path
          - else
            %li= link_to 'Sign In', sign_in_path
            %li= link_to 'Sign Up', sign_up_path
    .container
      - if notice
        %p.alert.alert-success{:role => "alert"}= flash[:notice]
      - elsif flash[:danger]
        %p.alert.alert-danger{:role => "alert"}= flash[:danger]
      = yield
      .page-header
      %footer.footer
        .col-md-9
          = link_to "About", about_path
          |
          = link_to "Terms", terms_path
          |
          = link_to "FAQ", faq_path
          |
          - if current_user
            = link_to "Users", users_path
            |
            = link_to "Projects", projects_path
        .col-md-3.text-right
          = link_to "http://linkedin.com/in/alexandralaudon" do
            = image_tag("linkedin.jpg", height:"25")
          = link_to "https://github.com/alexandralaudon" do
            = image_tag("github.jpg", height:"25")
          = link_to "https://twitter.com/AlexandraLaudon" do
            = image_tag("twitter.jpg", height:"25")
          = link_to "https://students.gschool.it/students/269" do
            = image_tag("gschool.jpg", height:"25")
