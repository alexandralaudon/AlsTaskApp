.form-horizontal
  .form-group
    = form_for @task do |f|
      = f.label :description, class: "col-md-2 control-label"
      .col-md-3
        = f.text_field :description, class: "form-control"
  .form-group
    = f.label :due_date, class: "col-md-2 control-label"
    .col-md-3
      = f.date_field :due_date, class: "form-control"
  - if controller.controller_name == 'tasks' && controller.action_name == 'edit'
    .form-group
      .col-md-offset-2.col-md-10
        = f.check_box :complete
        Complete
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit button_nm, class: "btn btn-primary"
      = link_to "cancel", tasks_path, class: "btn btn-default"
