
  <div class="page-header">
    <%= link_to "New Task", new_task_path, class: "btn btn-info pull-right" %>
    <h1>Listing Tasks</h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th colspan=1>Description</th>
        <th colspan=2>Due On</th>
      </tr>
    </thead>


    <tbody>
      <% @tasks.each do |task| %>
          <tr>
                <td class="col-md-3">
                  <a href="<%= task_path(task[:id]) %>"><%= task.description %>
                  </a>
                </td>

                <td class ="col-md-7">
                  <% if task.due_date %>
                  <%= task.due_date.strftime("%m/%d/%Y") %>
                  <% end %>
                </td>

                <td class="col-md-2 text-right">
                  <%= link_to "Edit", edit_task_path(task[:id]), class: "btn btn-info" %>

                  <%= link_to "Delete", task_path(task[:id]),
                  method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger " %>
                </td>

          </tr>
      <% end %>
    </tbody>

  </table>
