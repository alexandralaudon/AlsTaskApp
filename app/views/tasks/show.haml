- if @task.complete
  .page-header
    = link_to "Edit Task", edit_task_path, class: "btn btn-info pull-right"
    %h1
      %s= @task.description
- else
  .page-header
    = link_to "Edit Task", edit_task_path, class: "btn btn-info pull-right"
    %h1= @task.description
%ol.breadcrumb
  %li= link_to "Tasks", tasks_path
  %li.active= @task.description
- if @task.due_date
  .col-md-12
    %b= "Due On"
    \:
    \#{@task.due_date.strftime("%m/%d/%Y")}
