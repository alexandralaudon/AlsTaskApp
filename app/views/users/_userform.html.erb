<%= form_for @user do |f| %>
  <div class="form-horizontal">

    <div class="form-group">
      <%= f.label :first_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit button_nm, class: "btn btn-primary" %>

        <%= link_to "Delete", user_path(@user[:id]),
        method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger " %>

        <%= link_to "cancel", users_path, class: "btn btn-default" %>
      </div>
    </div>

  </div>
<% end %>
