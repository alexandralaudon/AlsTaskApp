<%= form_for @user do |f| %>
  <div class="form-horizontal">

    <div class="form-group">
      <%= f.label :first_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit button_nm, class: "btn btn-primary" %>
        <%= link_to "cancel", users_path, class: "btn btn-default" %>
      </div>
    </div>

    <% if controller.controller_name == 'users' && controller.action_name == 'edit' %>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-3">
          <div class="well">
            <center>
          <%= link_to "Delete User", user_path,
            method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger " %>
            </center>
          </div>
        </div>
      </div>
    <% end %>

  </div>
<% end %>
